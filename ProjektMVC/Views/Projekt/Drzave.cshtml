@model IEnumerable<ProjektMVC.Models.Projekt.Drzava>

@{
    ViewBag.Title = "Drzave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Države</h2>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td class="text-right">
                    @Html.ActionLink("Gradovi", "Gradovi", new { id = item.IDDrzava }, new { @class= "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>


</table>
